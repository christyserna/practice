//find the size of an array

#include <stdio.h>

  int main() {
 int arr[5] = {1,2,3,4,5};
int n;

  n = sizeof(arr[])/sizeof(arr[0]);

  printf("%d", n);

  return 0;


  //updating an element

  int arr[5] = {1,2,3,4,5};

  arr[0] = 7;
  printf("%d", arr[0]);

  return 0;


  // printing array regular & reverse

  int main() {

int arr[5] = {1,2,3,4,5}

    for ( i = 0; i < 5; i++) {
      printf("%d", arr[i]);
       }

      for (i = 4; i >=0; i--) {
        printf("%d", arr[i]);
      }

    return 0;
  }


  //arrays in strings


  int main() {

    int arr[4][8] = {"this", "is", "less", "good"};

    int *arr[4] = {"this", "is", "way", "better"};



  }
